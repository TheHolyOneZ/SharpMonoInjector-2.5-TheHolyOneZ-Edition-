<Window x:Class="SharpMonoInjector.Gui.Views.ChooseBepInExWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose BepInEx Installation"
        Height="450" Width="550"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        Background="#FF1A1A1A"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    
    <Border BorderBrush="#FF00E676" BorderThickness="2" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    Background="#FF000000" 
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="Window_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="⚙️ Choose BepInEx Installation" 
                               FontFamily="Segoe UI"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#FF00E676"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    <Button Content="✕" 
                            Width="40" Height="30"
                            HorizontalAlignment="Right"
                            Background="Transparent"
                            Foreground="#FFFFFFFF"
                            BorderThickness="0"
                            FontSize="16"
                            Click="Close_Click"
                            Cursor="Hand"
                            Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFE81123"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <TextBlock Text="Multiple BepInEx Installations Detected!" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#FFFFA500"
                               Margin="0,0,0,15"
                               TextWrapping="Wrap"/>

                    <TextBlock Foreground="#FFCCCCCC" 
                               FontSize="12" 
                               TextWrapping="Wrap"
                               Margin="0,0,0,20">
                        <Run Text="Both Standard BepInEx and a Mod Manager (Thunderstore/r2modman) were detected for"/>
                        <Run Text="{Binding GameName, Mode=OneWay}" FontWeight="Bold" Foreground="#FF00E676"/>
                        <Run Text="."/>
                        <LineBreak/><LineBreak/>
                        <Run Text="Please select which one you used to launch the game:"/>
                    </TextBlock>

                    <RadioButton x:Name="StandardRadio"
                                 IsChecked="{Binding IsStandardSelected, Mode=TwoWay}"
                                 GroupName="BepInExChoice"
                                 Margin="0,0,0,15">
                        <RadioButton.Style>
                            <Style TargetType="RadioButton">
                                <Setter Property="Foreground" Value="#FFFFFFFF"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="RadioButton">
                                            <Border x:Name="PART_Border"
                                                    Background="#FF2A2A2A" 
                                                    BorderBrush="#FF3A3A3A"
                                                    BorderThickness="1"
                                                    CornerRadius="6"
                                                    Padding="15">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Ellipse Grid.Column="0"
                                                             Width="20" Height="20"
                                                             Stroke="#FF00E676"
                                                             StrokeThickness="2"
                                                             VerticalAlignment="Top"
                                                             Margin="0,2,15,0">
                                                        <Ellipse.Style>
                                                            <Style TargetType="Ellipse">
                                                                <Setter Property="Fill" Value="Transparent"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                                        <Setter Property="Fill" Value="#FF00E676"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                    </Ellipse>
                                                    <ContentPresenter Grid.Column="1" VerticalAlignment="Top"/>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="PART_Border" Property="Background" Value="#FF333333"/>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="PART_Border" Property="BorderBrush" Value="#FF00E676"/>
                                                    <Setter TargetName="PART_Border" Property="BorderThickness" Value="2"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </RadioButton.Style>
                        <StackPanel>
                            <TextBlock Text="🎮 Standard BepInEx (Game Folder)" 
                                       FontWeight="SemiBold" 
                                       FontSize="14"
                                       Foreground="#FF00E676"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Select this if you:" 
                                       Foreground="#FFAAAAAA" 
                                       FontSize="11"
                                       Margin="0,0,0,5"/>
                            <TextBlock Foreground="#FFCCCCCC" 
                                       FontSize="11" 
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8">
                                <Run Text="  • Launched the game directly (double-clicked the .exe)"/>
                                <LineBreak/>
                                <Run Text="  • Manually installed BepInEx to the game folder"/>
                                <LineBreak/>
                                <Run Text="  • Did NOT use a mod manager"/>
                            </TextBlock>
                            <TextBlock FontSize="10" 
                                       Foreground="#FF808080" 
                                       TextWrapping="Wrap">
                                <Run Text="Path: "/>
                                <Run Text="{Binding StandardPath, Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton x:Name="ModManagerRadio"
                                 IsChecked="{Binding IsModManagerSelected, Mode=TwoWay}"
                                 GroupName="BepInExChoice">
                        <RadioButton.Style>
                            <Style TargetType="RadioButton">
                                <Setter Property="Foreground" Value="#FFFFFFFF"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="RadioButton">
                                            <Border x:Name="PART_Border"
                                                    Background="#FF2A2A2A" 
                                                    BorderBrush="#FF3A3A3A"
                                                    BorderThickness="1"
                                                    CornerRadius="6"
                                                    Padding="15">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Ellipse Grid.Column="0"
                                                             Width="20" Height="20"
                                                             Stroke="#FF00E676"
                                                             StrokeThickness="2"
                                                             VerticalAlignment="Top"
                                                             Margin="0,2,15,0">
                                                        <Ellipse.Style>
                                                            <Style TargetType="Ellipse">
                                                                <Setter Property="Fill" Value="Transparent"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                                        <Setter Property="Fill" Value="#FF00E676"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                    </Ellipse>
                                                    <ContentPresenter Grid.Column="1" VerticalAlignment="Top"/>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="PART_Border" Property="Background" Value="#FF333333"/>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="PART_Border" Property="BorderBrush" Value="#FF00E676"/>
                                                    <Setter TargetName="PART_Border" Property="BorderThickness" Value="2"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </RadioButton.Style>
                        <StackPanel>
                            <TextBlock Text="⚡ Mod Manager (Thunderstore/r2modman)" 
                                       FontWeight="SemiBold" 
                                       FontSize="14"
                                       Foreground="#FF00A8E8"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Select this if you:" 
                                       Foreground="#FFAAAAAA" 
                                       FontSize="11"
                                       Margin="0,0,0,5"/>
                            <TextBlock Foreground="#FFCCCCCC" 
                                       FontSize="11" 
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8">
                                <Run Text="  • Launched the game through Thunderstore Mod Manager"/>
                                <LineBreak/>
                                <Run Text="  • Launched the game through r2modman"/>
                                <LineBreak/>
                                <Run Text="  • Used any mod manager to start the game"/>
                            </TextBlock>
                            <TextBlock FontSize="10" 
                                       Foreground="#FF808080" 
                                       TextWrapping="Wrap">
                                <Run Text="Path: "/>
                                <Run Text="{Binding ModManagerPath, Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </ScrollViewer>

            <Border Grid.Row="2" 
                    Background="#FF000000" 
                    BorderBrush="#FF3A3A3A"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,8,8"
                    Padding="20,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0"
                            Content="Cancel"
                            Height="40"
                            Background="#FF3A3A3A"
                            Foreground="#FFFFFFFF"
                            BorderThickness="0"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="Cancel_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF4A4A4A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Grid.Column="2"
                            Content="✓ Confirm Selection"
                            Width="180"
                            Height="40"
                            Background="#FF00E676"
                            Foreground="#FF000000"
                            BorderThickness="0"
                            FontSize="13"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="Confirm_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF00C853"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>