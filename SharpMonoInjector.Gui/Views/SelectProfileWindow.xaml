<Window x:Class="SharpMonoInjector.Gui.Views.SelectProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Profile" Height="350" Width="400"
        WindowStyle="None" ResizeMode="NoResize" Background="#FF1A1A1A" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    <Border BorderBrush="#FF00E676" BorderThickness="1" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#FF000000" CornerRadius="8,8,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="{Binding Title}" Foreground="#FF00E676" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0"/>
                    <Button Content="âœ•" Width="40" Height="30" Background="Transparent" Foreground="#FFFFFFFF" BorderThickness="0" FontSize="16" Click="Close_Click" Cursor="Hand" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                </Grid>
            </Border>

            <StackPanel Grid.Row="1" Margin="20">
                <RadioButton Content="Use Current Settings" IsChecked="{Binding UseCurrentSettings}" Style="{StaticResource ModernRadioButton}" Margin="0,0,0,15"/>
                <RadioButton x:Name="rbUseProfile" Content="Use Saved Profile:" IsChecked="{Binding UseCurrentSettings, Converter={StaticResource InverseBooleanConverter}}" Style="{StaticResource ModernRadioButton}" Margin="0,0,0,10"/>
                
                <ListBox ItemsSource="{Binding AvailableProfiles}" SelectedItem="{Binding SelectedProfile}"
                         Style="{StaticResource ModernListBox}" Height="150" Margin="20,0,0,0"
                         IsEnabled="{Binding Path=IsChecked, ElementName=rbUseProfile}"/>
            </StackPanel>

            <Border Grid.Row="2" Background="#FF1E1E1E" CornerRadius="0,0,8,8">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                    <Button Content="OK" Style="{StaticResource ModernButton}" Width="90" Margin="0,0,10,0" IsDefault="True" Command="{Binding SelectCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>